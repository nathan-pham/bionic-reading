{
    "name": "Bionic Reading",
    "description": "Better and faster reading",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "unlimitedStorage"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["/js/contentScript.js"]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "/assets/favicon-16x16.png",
            "32": "/assets/favicon-32x32.png"
        }
    },
    "icons": {
        "16": "/assets/favicon-16x16.png",
        "32": "/assets/favicon-32x32.png",
        "192": "/assets/android-chrome-192x192.png",
        "512": "/assets/android-chrome-512x512.png"
    }
}
